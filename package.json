{
    "private": true,
    "description": "基于 Vue 、JSON Schema 快速构建一个带完整校验的form表单",
    "repository": "https://github.com/lljj-x/vue-json-schema-form",
    "homepage": "https://github.com/lljj-x/vue-json-schema-form",
    "author": "Liu.Jun",
    "workspaces": [
        "packages/lib/**",
        "packages/docs",
        "packages/demo/**"
    ],
    "scripts": {
        "docs:dev": "pnpm --filter docs dev",
        "docs:build": "pnpm --filter docs build",
        "lib:watch": "pnpm --filter @cps/vue2-schema-form-gsui watch",
        "lib:build": "pnpm --filter @cps/vue2-schema-form-gsui build",
        "demo:dev": "pnpm --filter demov1 serve",
        "demo:build": "pnpm --filter demov1 build",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
        "clean": "lerna clean && rimraf node_modules",
        "packages:diff": "lerna diff",
        "packages:list": "lerna ls -l",
        "packages:changed": "lerna changed",
        "packages:build": "lerna run --stream --sort build",
        "publish1": "pnpm run lib:build && lerna publish",
        "autoPublish": "lerna publish --conventional-commits --yes",
        "autoVersion": "lerna version --conventional-commits --yes"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/express-serve-static-core": "4.17.30",
        "@vue/compiler-sfc": "^3.0.0",
        "commitizen": "^4.1.2",
        "conventional-changelog-cli": "^2.0.34",
        "cz-conventional-changelog": "^3.2.0",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "naive-ui": "^2.26.1",
        "rimraf": "^3.0.2"
    },
    "version": "0.0.0"
}
